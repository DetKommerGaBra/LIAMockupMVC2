@model IEnumerable<LIAMockupMVC2.Models.Organization>
@{
    ViewData["Title"] = "TestingOrganization";
}
@{
    var organizations = ViewData["Organizations"] as List<Organization>;
}

<div class="text-center">
    <h1 class="display-4 mb-5">Testing getting info</h1>

    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.OrgId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.OrgName)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in organizations)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.OrgId)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.OrgName)
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>